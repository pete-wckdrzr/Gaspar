<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <CSharpExporterTaskAssembly>..\tools\net5.0\CSharpExporter.dll</CSharpExporterTaskAssembly>
  </PropertyGroup>

  <UsingTask AssemblyFile="$(CSharpExporterTaskAssembly)" TaskName="WCKDRZR.CSharpExporter.MSBuild.OnBuild" />

  <Target Name="CSharpExporter" BeforeTargets="BeforeCompile" Condition="'$(RunCSharpExporter)' != 'False'">
    <WCKDRZR.CSharpExporter.MSBuild.OnBuild ConfigFile="$(MSBuildProjectDirectory)\csharp-exporter.config.json" />
  </Target>
</Project>